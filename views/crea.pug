doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Registrarse
        link(rel='stylesheet', href='../stylesheets/style.css')
    body
        form(action="/crea", method="POST")
            h2 Registrarse
            .section
                .title Nom d'usuari
                .field
                    input(type="text", id="nomLogin", name="nomLogin")
            .section
                .title Contrasenya
                .field
                    input(type="password", id="ContrasenyaLogin", name="ContrasenyaLogin")
            .section
                .title Rol
                .field
                      select(id="role" name="role")
                        option(value="admin") Administrador
                        option(value="user") Usuari normal
            .section
                .button
                    input(type="submit", value="Registrarse")
                .button
                    a(href="/") Torna

