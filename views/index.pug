doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Iniciar Sesión
        link(rel='stylesheet', href='../stylesheets/style.css')
    body
    <br><br><br><br><br><br>
        form(action="/comproba", method="POST")
            h2 Iniciar Sesión
            .section
                .title Username
                .field
                    input(type="text", id="nomLogin", name="nomLogin")
