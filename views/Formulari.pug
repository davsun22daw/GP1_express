doctype html
html
  head
    title= title
    link(rel='stylesheet', href='../stylesheets/style.css')
  body

include menu


ul#actividades
  li.draggable(deporte) Deportes
  li.draggable(estudio) Estudio
  li.draggable(arte) Art
  li.draggable(relajacion) Relaxació
  li.draggable(Musica) Música
  li.draggable(Botanica) Botànica




form#ofrecer-actividad(action="/Calendar", method="post")
  br
  br
  label(for="nombre-actividad") Nom de l'activitat:

  input(type="text", name="nombre-actividad", required)
  br 
  br 
  br 
  label(for="descripcion-actividad") Descripció de l'activitat:
  textarea(name="descripcion-actividad", required)
  br
  br
  br 
  br
  label(for="horas-actividad") Hores disponibles per a l'activitat:
  input(type="text", name="horas-actividad", required)
  br
  input(type="hidden", name="tipo-actividad")
  br
  br
  button(type="submit") Enviar
 

